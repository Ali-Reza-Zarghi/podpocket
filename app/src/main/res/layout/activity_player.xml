<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="viewModel"
            type="com.furkanaskin.app.podpocket.ui.player.PlayerViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackgroundColor"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".ui.player.PlayerActivity">

        <ImageView
            android:id="@+id/imageViewCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/relativeLayoutContainer"
            android:scaleType="centerCrop"
            app:setDrawableLink="@{viewModel.item.getImage()}" />

        <RelativeLayout
            android:id="@+id/relativeLayoutContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp">

            <RelativeLayout
                android:id="@+id/relativeLayoutTrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_16_dp">

                <ImageView
                    android:id="@+id/imageViewTrackDisk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4_dp"
                    android:src="@drawable/ic_track_disk" />

                <com.furkanaskin.app.podpocket.utils.ui.GMMarqueTextView
                    android:id="@+id/textViewTrackName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8_dp"
                    android:layout_marginTop="@dimen/margin_8_dp"
                    android:layout_marginEnd="@dimen/margin_16_dp"
                    app:centerText="false"
                    app:forceMarquee="true"
                    app:marqueeEnabled="true"
                    android:layout_toEndOf="@id/imageViewTrackDisk"
                    android:text="Twoloud&amp;JustLuke-Be The One(Club remix)"
                    android:textColor="@color/white" />


                <ImageButton
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/round_button"
                    android:src="@drawable/ic_track_list" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutNameAndEpisode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayoutTrack"
                android:layout_margin="@dimen/margin_16_dp">

                <com.furkanaskin.app.podpocket.ui.PodPocketTextView
                    android:id="@+id/textViewAlbumName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/albumTextSize"
                    tools:text="MARTIN GARRIX SHOW" />

                <com.furkanaskin.app.podpocket.ui.PodPocketTextView
                    android:id="@+id/textViewEpisodeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewAlbumName"
                    android:layout_marginTop="@dimen/margin_8_dp"
                    android:textColor="@color/grayTextColor"
                    android:textSize="@dimen/episodeTextSize"
                    tools:text="EPISODE - 147" />

                <ImageView
                    android:id="@+id/imageViewShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/margin_8_dp"
                    android:src="@drawable/ic_more" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayoutNameAndEpisode">

                <com.google.android.exoplayer2.ui.DefaultTimeBar
                    android:id="@+id/defaultTimeBar"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/margin_8_dp"
                    app:played_color="#000000"
                    app:unplayed_color="@color/white"

                    />

                <com.furkanaskin.app.podpocket.ui.PodPocketTextView
                    android:id="@+id/textViewLeftMinute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/defaultTimeBar"
                    android:layout_marginTop="@dimen/margin_8_dp"
                    android:layout_marginStart="@dimen/margin_16_dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_8_sp"
                    tools:text="01:02:52" />

                <com.furkanaskin.app.podpocket.ui.PodPocketTextView
                    android:id="@+id/textViewRightMinute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/defaultTimeBar"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/margin_8_dp"
                    android:layout_marginEnd="@dimen/margin_16_dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_8_sp"
                    tools:text="01:43:40" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/relativeLayoutControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayoutSeekBar"
                android:gravity="center"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/imageViewShuffleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_shuffle" />

                <ImageView
                    android:id="@+id/imageViewPreviousButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_previous" />


                <ImageButton
                    android:id="@+id/imageViewPlayButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/play_button"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_play" />


                <ImageView
                    android:id="@+id/imageViewNextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_next" />

                <ImageView
                    android:id="@+id/imageViewRepeatButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_repeat" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayoutControls"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin_16_dp"
                android:backgroundTint="@color/grayAddQueue"
                android:text="@string/player_queue"
                android:textSize="@dimen/dimen_16_sp"
                app:cornerRadius="100dp"
                app:icon="@drawable/ic_arrow_up_android"
                app:iconGravity="textStart" />
        </RelativeLayout>
    </RelativeLayout>

</layout>
